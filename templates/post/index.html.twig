{% extends 'base.html.twig' %}

{% block body %}
    <h1>Tous les articles</h1>
    <form method="get">
        <input type="text" name="search" placeholder="Rechercher un article">
        <button type="submit">Search</button>
    </form>
    <ul>
        {% for post in posts %}
            <li><a href="{{ path('post_show', {'id': post.id}) }}">{{ post.title }}</a></li>
        {% endfor %}
    </ul>
{% endblock %}
